@layer components {
    .o-section {
        @apply
        flex
        justify-center
        my-auto
        @container;

        &:not(:first-child) {
            @apply
            py-10;
        }
    }

    .o-section--dummy {
        @apply
        h-80
        text-2xl
        
        bg-white;
    }

    .o-section--dummy-gradient {
        @apply
        h-80
        text-white
        text-2xl
        
        u-gradient-to-r;
    }
}